<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	
	<!-- 自定义别名 -->
	<typeAliases>
		<!-- 单个别名定义 -->
		<!-- <typeAlias type="com.stanlong.pojo.User" alias="user"/> --> 
		
		<!-- 批量别名定义
			指定包名， mybatis 自动扫描包中的 pojo类， 别名就是类名首字母大写或者小写
		 -->
		<package name="com.stanlong.pojo"/>
		
	</typeAliases>
	
	<!-- 加载映射文件 -->
	<mappers>
		<!-- 通过 resource 方法加载映射文件 -->
		<mapper resource="com/stanlong/mapper/User.xml"/>
		<mapper resource="com/stanlong/mapper/UserMapper.xml"/>
		<mapper resource="com/stanlong/mapper/OrdersMapper.xml"/>
		
		<!-- 通过mapper接口加载映射文件
			需要遵循规范：使用mapper代理方法，将mapper接口类名和mapper.xml映射文件名称保持一致，且在一个目录中
		 -->
		<!-- <mapper class=""/>  -->
		
		<!-- 批量加载 mapper
			指定mapper接口的包名, mybatis自动扫描包下面的所有mapper接口并进行加载
		-->
		<!-- <package name="com/stanlong/mapper"/>  -->
	</mappers>

	<!-- ResultMap 可以实现延迟加载 -->
</configuration>